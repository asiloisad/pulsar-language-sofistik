{
  "name": "language-sofistik",
  "description": "Syntax highlighting for SOFiSTiK",
  "repository": "https://github.com/asiloisad/pulsar-language-sofistik",
  "keywords": [
    "SOFiSTiK",
    "CADINP",
    "language"
  ],
  "version": "2.2.0",
  "license": "MIT",
  "engines": {
    "atom": ">=1.100.0 <2.0.0"
  },
  "main": "./lib/main",
  "providedServices": {
    "sofistik.keywords": {
      "versions": {
        "2.0.0": "provideKeywords"
      }
    }
  },
  "grammars": [
    "grammars/sofistik.cson",
    "grammars/sofistik-raw.cson"
  ],
  "configSchema": {
    "version": {
      "order": 1,
      "title": "SOFiSTiK version",
      "description": "SOFiSTiK version for keyword service (autocomplete). Use 'Auto detect' to detect from file content or sofistik.def.",
      "type": "string",
      "enum": ["Auto", "2026", "2025", "2024", "2023", "2022", "2020", "2018"],
      "default": "Auto"
    },
    "language": {
      "order": 2,
      "title": "Language",
      "description": "Language for SOFiSTiK keyword service.",
      "type": "string",
      "enum": ["English", "German"],
      "default": "English"
    }
  }
}
